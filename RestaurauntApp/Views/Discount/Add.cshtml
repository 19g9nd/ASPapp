@model RestaurauntApp.DTOS.DiscountCodeDTO
@{
    ViewData["Title"] = "Add";
}
<style>
    body {
        background-color: #201a1b;
        color: #fff;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        padding: 20px;
        color: #fff;
    }

    .main {
        margin: 0 auto;
        background-color: #514347;
        border: 1px solid #20191e;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
        height: auto;
        min-height: auto;
    }

    label {
        display: block;
        font-weight: bold;
        color: #fff;
        margin-top: 10px;
    }

    input[type="text"],
    input[type="number"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #150808;
        border-radius: 3px;
        background-color: #1f2029;
        color: #fff;
        margin-top: 5px;
    }

    button {
        background-color: #080708;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
        margin-top: 10px;
    }

    button:hover {
        background-color: #000000;
    }

    a {
        text-decoration: none;
        color: #080708;
        font-weight: bold;
    }
</style>
<h1>@ViewData["Title"]</h1>

<form asp-controller="Discount" asp-action="Add" method="post" class="main">
    <div class="form-group">
        <label asp-for="@Model.Code">Code:</label>
        <input type="text" class="form-control" asp-for="@Model.Code" required>
        <label asp-for="@Model.Value">Discount Percent:</label>
        <input type="number" class="form-control" asp-for="@Model.Value" required>
        <label asp-for="@Model.ValidFrom">Valid From:</label>
        <input type="date" class="form-control" asp-for="@Model.ValidFrom" required>
        <label asp-for="@Model.ValidTo">Valid To:</label>
        <input type="date" class="form-control" asp-for="@Model.ValidTo" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Discount Code</button>
</form>
