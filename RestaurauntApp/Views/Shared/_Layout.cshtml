function changeTheme(theme) {
    var styleSheetName = theme === 'dark' ? 'dark.css' : 'light.css';

    // Получаем ссылки на все элементы <link>, подключающие стили для страницы
    var allPageStyles = document.querySelectorAll('link[rel="stylesheet"][type="text/css"]');

    // Перебираем все найденные элементы <link> и меняем их href на новый путь к CSS файлу
    allPageStyles.forEach(function(style) {
        var oldPath = style.getAttribute('href'); // Получаем текущий путь к CSS файлу
        var basePath = oldPath.split('/').slice(0, -1).join('/') + '/'; // Получаем начальный путь к CSS файлу
        var newPath = basePath + styleSheetName; // Формируем новый путь к CSS файлу
        style.href = newPath; // Устанавливаем новый путь к CSS файлу
    });

    // Сохраняем выбранную тему в cookie
    document.cookie = "theme=" + theme + ";path=/";
}

// Функция для чтения значения cookie
function getCookie(name) {
    var value = "; " + document.cookie;
    var parts = value.split("; " + name + "=");
    if (parts.length === 2) return parts.pop().split(";").shift();
}

// При загрузке страницы применяем сохраненную тему (если она есть)
window.onload = function() {
    var savedTheme = getCookie("theme");
    if (savedTheme) {
        changeTheme(savedTheme);
    }
};



</script>
