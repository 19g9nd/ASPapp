@{
  ViewData["Title"] = "Create";
}
@{
  string? Name = string.Empty;
  string? Description = string.Empty;
  bool IsVegetarian = false;
  int? Calories = null;
  string? ImageURL = "image";
  decimal? Price = null;
  string? Category = string.Empty;

}
<link href="@Url.Content("~/css/Menu/Create/light.css")" rel="stylesheet" type="text/css" />

<h1 class="title">@ViewData["Title"]</h1>
<form method="post" enctype="multipart/form-data" action="/Menu" class="main">
  <div class="form-group">
    <label asp-for=@Name>Name:</label>
    <input asp-for=@Name required class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="@Description">Description:</label>
    <input asp-for="@Description" required class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="@Category">Category:</label>
    <select asp-for="@Category" class="form-control">
      <option value="pizza">Pizza</option>
      <option value="pasta">Pasta</option>
      <option value="drink">Drink</option>
      <option value="salad">Salad</option>
    </select>
  </div>

  <div class="checkbox-wrapper-14">
    <input asp-for="@IsVegetarian" class="switch" />
    <label class="form-check-label" asp-for="@IsVegetarian">Is Vegetarian</label>
  </div>
  <div class="form-group">
    <label asp-for="@Calories">Calories:</label>
    <input required asp-for="@Calories" class="form-control" />
  </div>
  <div>
    <label for="@ImageURL">Image:</label>
    <!-- Поле выбора файла -->
    <input type="file" id="@ImageURL" name="image" class="file-input" accept="image/*" />
    <label for="@ImageURL" class="file-label">Choose Image</label>
  </div>
  <div class="form-group">
    <label asp-for="@Price">Price:</label>
    <input asp-for="@Price" required class="form-control" step="0.01" />
  </div>

  <div class="form-group">
    <button type="submit" class="submitBtn">Create</button>
    <button type="reset" class="resetBtn">Reset</button>
  </div>
  <div class="returnBtn">
    <a asp-action="GetAll">Return to menu</a>
  </div>
</form>
