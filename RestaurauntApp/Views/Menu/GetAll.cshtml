@model List<MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}
@functions {

}


<!DOCTYPE html>
<html lang="en">

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>@ViewData["Title"]</title>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600&display=swap">
<style>
    /* Style for the main container */
    .main-container {
        background-color: #f2f2f2;
        color: #333;
        margin: 0;
        padding: 0;
        max-height: fit-content;
    }

    /* Style for the page title */
    h2 {
        text-align: center;
        padding: 20px;
        color: #ff4081;
        font-size: 28px;
    }

    /* Style for each menu item */
    .menu-item {
        display: flex;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid #ddd;
        background-color: #fff;
    }

    .menu-item img {
        max-width: 150px;
        max-height: 150px;
        margin-right: 20px;
        border-radius: 10px;
    }

    .menu-item div {
        flex-grow: 1;
    }

    .menu-item h5 {
        font-size: 24px;
        margin: 0;
    }

    .menu-item p {
        font-size: 16px;
        margin: 5px 0;
        color: #666;
    }

    .menu-item strong {
        font-weight: 600;
    }

    .menu-item button {
        background-color: #080708;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
        margin-right: 10px;
    }

    .menu-item button:hover {
        background-color: rgb(26, 18, 86);
    }

    .menu-item a:hover {
        text-decoration: underline;
    }

    /* Style for the delete button */
    .deleteBtn {
        background-color: #c60042;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
    }

    .orderBtn {
        background-color: #f5006a;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 3px;
        cursor: pointer;
        display: inline-block;
        transition: background-color 0.6ms;
    }

    .orderBtn:hover {
        background-color: #ff004c;
    }


    .deleteBtn:hover {
        background-color: #0011ff;
    }

    .createBtn {
        text-align: center;
        margin-top: 20px;
    }

    .createBtn a {
        display: inline-block;
        background-color: #ff4081;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .createBtn a:hover {
        background-color: #ff0066;
    }
</style>


<body>
    <h2>Menu Items</h2>
    @foreach (var claim in User.Claims)
    {
        System.Console.WriteLine(claim.Type + ":" + claim.Value);
    }
    @foreach (var menuItem in Model)
    {

        <div class="menu-item">
            <img src="@Url.Content(menuItem.ImageURL)" alt="@menuItem.Name" />
            <div>
                <h5>@menuItem.Name</h5>
                <p>@menuItem.Description</p>
                <p><strong>Category:</strong> @menuItem.Category</p>
                <p><strong>Is Vegetarian:</strong> @{
                        if (menuItem.IsVegetarian == true)
                        {
                            <text>Yes</text>
                            ;
                        }
                        else
                        {
                            <text>No</text>
                            ;
                        }
                    }
                </p>

                <p><strong>Calories:</strong> @menuItem.Calories</p>
                <p><strong>Price:</strong> @string.Format("{0:C}", menuItem.Price)</p>
                @if (this.User.IsInRole("Admin"))
                {

                    <form id="deleteForm-@menuItem.Id">
                        <input type="hidden" name="id" value="@menuItem.Id" />
                        <button type="button" class="deleteBtn" onclick="submitDelete(@menuItem.Id)">Delete</button>
                    </form>
                }
                else
                {
                    <a href="#" class="orderBtn">Order Now</a>
                }

            </div>
        </div>
    }
    @if (this.User.IsInRole("Admin"))
    {
        <div class="createBtn">
            <a asp-action="Create">Add New Item</a>
        </div>
    }
</body>

</html>

<script>
    function submitDelete(itemId) {
        if (confirm('Are you sure you want to delete this item?')) {
            var form = document.getElementById('deleteForm-' + itemId);
            var formData = new FormData(form);
            fetch('/menu/DeleteAsync', {
                method: 'DELETE',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        // Успешное удаление
                        window.location.reload(); // Обновление страницы после удаления
                    } else if (response.status === 404) {
                        alert('Item not found.');
                    } else {
                        alert('Failed to delete item.'); // Если произошла ошибка при удалении
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    }

</script>
